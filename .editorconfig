# configuration file for the editorconfig plugin in vscode.
# will tell vscode that new files are to be created with LF as line ending
# must be in the root of the repo

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = false

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py,yaml,json,sql,java,ts,tsx,ps,sh}]
charset = utf-8
indent_style = space
indent_size = 4